<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mcgonagallspeech"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/welcome_to_hogwarts" />

    <TextView
        android:id="@+id/speech"
        android:layout_width="match_parent"
        android:layout_height="313dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:clickable="true"
        android:fontFamily="@font/archivo_black"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="italic"
        android:onClick="gotothesortingceremony"
        android:text="Professor Mcgonagall Welcomes You To Hogwarts"/>

    <TextView
        android:id="@+id/taptocintinue"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="81dp"
        android:layout_marginBottom="137dp"
        android:fontFamily="@font/archivo_black"
        android:text="Tap To Continue"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="italic"
        android:clickable="true"
        android:onClick="gotothesortingceremony"/>
</RelativeLayout>