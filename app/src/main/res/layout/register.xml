<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/joinbackground2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/join_background" />

    <TextView
        android:id="@+id/joinhogwarts2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:fontFamily="@font/hammersmith_one"
        android:text="Join Hogwarts"
        android:textAllCaps="true"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="154dp"
        android:text="...now please enter your name, email address and password to access the complete hogwarts experience."
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/enterfirstname"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/joinhogwarts2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="277dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/enterlastname"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/enterfirstname"
        android:layout_alignParentTop="true"
        android:layout_marginTop="333dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/renteremail"
        android:layout_width="272dp"
        android:layout_height="41dp"
        android:layout_alignStart="@+id/joinhogwarts2"
        android:layout_alignEnd="@+id/enterlastname"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/renterpassword"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/joinhogwarts2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="440dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/black" />

    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="371dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="92dp"
            android:layout_height="57dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="53dp"
            android:text="Male"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="55dp"
            android:text="Female"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </RadioGroup>

    <Button
        android:id="@+id/rjoinnow"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="61dp"
        android:layout_marginBottom="22dp"
        android:background="#010e62"
        android:text="JOIN NOW"
        android:textColor="@android:color/background_light"
        android:onClick="rgotologin"/>


</RelativeLayout>